<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/txt_logo"
        android:layout_width="212dp"
        android:layout_height="68dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/logo_hitam"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:id="@+id/go_mart"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="77dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_logo"
        app:layout_constraintRight_toLeftOf="@id/go_ride"
        android:background="@drawable/menu_gomart"/>

    <ImageButton
        android:id="@+id/go_ride"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/txt_logo"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="77dp"
        android:layout_marginRight="35dp"
        app:layout_constraintLeft_toRightOf="@id/go_mart"
        android:background="@drawable/menu_goride"/>

    <ImageButton
        android:id="@+id/go_food"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/menu_gofood"
        app:layout_constraintTop_toBottomOf="@id/go_mart"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/go_send"/>

    <ImageButton
        android:id="@+id/go_send"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintTop_toBottomOf="@id/go_ride"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="35dp"
        android:layout_marginRight="35dp"
        app:layout_constraintLeft_toRightOf="@id/go_mart"
        android:background="@drawable/menu_gosend"
        />

</androidx.constraintlayout.widget.ConstraintLayout>